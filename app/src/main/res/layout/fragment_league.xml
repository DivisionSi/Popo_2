<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/pl_league"
    android:paddingRight="7dp"

    android:paddingLeft="7dp"
    tools:context="com.gmail.saadbnwhd.popo_2.PlayersFragment">
<Button

    android:scaleY=".9"
    android:id="@+id/teams"
    android:text="TEAMS"
    android:alpha="0.96"
    android:textColor="@color/dark"
    android:background="#807DBF7D"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:textSize="20sp"
    android:layout_marginTop="7dp"/>
    <Button
        android:scaleY="0.9"
        android:textSize="20sp"
        android:alpha="0.96"
        android:layout_marginTop="0dp"
        android:textColor="@color/dark"
        android:background="#807DBF7D"
        android:layout_below="@+id/teams"
        android:id="@+id/btn_fixtures"
        android:text="FIXTURES"
        android:layout_width="match_parent"
        android:layout_height="75dp" />
    <Button
        android:scaleY=".9"
        android:textSize="20sp"
        android:alpha="0.96"
        android:layout_marginTop="0dp"
        android:textColor="@color/dark"
        android:background="#807DBF7D"
        android:layout_below="@+id/btn_fixtures"
        android:id="@+id/btn_results"
        android:text="RESULTS"
        android:layout_width="match_parent"
        android:layout_height="75dp" />
    <Button
        android:scaleY=".9"
        android:id="@+id/btn_table"
        android:text="TABLE"
        android:layout_below="@+id/btn_results"
        android:alpha="0.96"
        android:textColor="@color/dark"
        android:background="#807DBF7D"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:textSize="20sp"
        />

</RelativeLayout>