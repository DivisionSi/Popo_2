<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/White"
    tools:context="com.gmail.saadbnwhd.popo_2.TeamsEditor">
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/team_name"
    android:hint="TEAM NAME"
    android:textColor="@color/Black"
    android:textColorHint="#6a6969"
    android:layout_marginTop="82dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:textAlignment="center"
    android:textSize="20dp"
    android:inputType="textCapWords" />
    <EditText
        android:layout_below="@+id/team_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/team_location"
        android:hint="LOCATION"
        android:textColor="@color/Black"
        android:textColorHint="#6a6969"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:inputType="textCapWords" />
    <Button
        android:id="@+id/browselogo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="loadImagefromGallery"
        android:background="@color/White"
        android:text="Choose Logo"
        android:textColor="#6a6969"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_below="@+id/team_location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
    <ImageView
        android:id="@+id/team_logo"
        android:padding="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ababab"

        android:layout_below="@+id/browselogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/btn_done"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"/>

</RelativeLayout>
