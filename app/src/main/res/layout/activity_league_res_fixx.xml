<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.gmail.saadbnwhd.popo_2.PlayersFragment">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
    <Button
        android:layout_marginTop="5dp"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:text="DONE"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/result_done" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/Black"
        android:id="@+id/score_team2"
        android:hint="Goals"
        android:layout_below="@+id/team1"
        android:layout_alignEnd="@+id/result_done"
        android:layout_marginTop="17dp"
        android:paddingRight="120dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/Black"
        android:id="@+id/score_team1"
        android:hint="Goals"

        android:layout_alignRight="@+id/result_done"
        android:paddingRight="120dp" />

        <TextView
        android:paddingLeft="10dp"
        android:text="Arsenal Fc"
        android:id="@+id/team1"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:textAlignment="viewStart"
        android:layout_height="35sp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/team2" />

        <TextView
            android:paddingLeft="10dp"
            android:text="Alliance Fc"
            android:id="@+id/team2"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:textSize="30sp"
            android:layout_height="35sp"
            android:layout_alignBaseline="@+id/score_team2"
            android:layout_alignBottom="@+id/score_team2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp" />
    </RelativeLayout>

</RelativeLayout>
