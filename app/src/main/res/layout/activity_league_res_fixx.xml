<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.gmail.saadbnwhd.popo_2.PlayersFragment"
    android:background="@color/newclr1">


    <Button
        android:layout_marginTop="5dp"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:text="DONE"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/result_done" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:id="@+id/scrollviewpopo"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/newclr1"
            >



            <TextView
                android:paddingLeft="10dp"
                android:text="Arsenal Fc"
                android:background="@color/newclr1"
                android:id="@+id/team1"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_height="35sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/team1"
                android:textSize="25sp"
                android:text="4"
                android:layout_centerHorizontal="true"
                android:textColor="@color/Black"
                android:id="@+id/score_team1"/>
            <ListView
                android:layout_below="@+id/score_team1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:id="@+id/scorers_list" />
            <TextView
                android:paddingLeft="10dp"
                android:background="@color/newclr1"
                android:layout_below="@+id/scorers_list"
                android:text="Alliance Fc"
                android:id="@+id/team2"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_height="35sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/team2"
                android:textSize="25sp"
                android:text="4"
                android:layout_centerHorizontal="true"
                android:textColor="@color/Black"
                android:id="@+id/score_team2"/>
            <ListView
                android:layout_below="@+id/score_team2"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:id="@+id/scorers_list1"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"/>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
