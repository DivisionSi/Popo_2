<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.gmail.saadbnwhd.popo_2.PlayersFragment"
    android:background="@color/White">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="DONE"
        android:layout_marginRight="5dp"
        android:id="@+id/result_done"
        android:layout_alignParentEnd="true"
        />

    <ListView
        android:textColor="@color/Black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/team1"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/Snd_Team"
        android:dividerHeight="0.5dp" />

    <TextView
        android:paddingLeft="10dp"
        android:text="Arsenal Fc"
        android:id="@+id/team1"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/Black"

        android:layout_height="35sp"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:paddingLeft="10dp"
        android:text="Alliance Fc"
        android:id="@+id/team2"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/Black"
        android:textSize="30sp"
        android:layout_height="35sp"

        android:layout_alignBaseline="@+id/result_done"
        android:layout_alignBottom="@+id/result_done"
        android:layout_alignEnd="@+id/team1" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Fst_Team"
        android:layout_below="@+id/team2"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/team1"
        android:textColor="@color/Black"
        android:dividerHeight="0.5dp" />


</RelativeLayout>
