<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newclr"
    android:paddingTop="20dp"
    tools:context="com.gmail.saadbnwhd.popo_2.LeaguePlayer_Stats">
<ImageView
    android:id="@+id/player_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scaleType="fitCenter"
    android:background="@drawable/playericon2"/>
    <TextView
        android:layout_toRightOf="@+id/player_image"
        android:id="@+id/player_number"
        android:text="23"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@+id/player_image"
        android:layout_below="@+id/player_number"
        android:id="@+id/player_name"
        android:text="Saad Bin Waheed"
        android:textSize="33sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="false" />
    <TextView
        android:layout_toRightOf="@+id/player_image"
        android:layout_below="@+id/player_name"
        android:id="@+id/player_club"
        android:text="Alliance FC"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@+id/player_image"
        android:layout_below="@+id/player_club"
        android:id="@+id/player_position"
        android:text="Striker"
        android:background="@color/newclr1"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginTop="10dp"
        android:layout_below="@+id/player_image"
        android:id="@+id/player_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HELLO"
        android:textSize="30sp"
        android:textColor="@color/grey"
        android:background="@color/White"
        android:ems="5"
        android:textIsSelectable="false"
        android:enabled="false" />
    <EditText
        android:layout_below="@+id/player_txt1"
        android:id="@+id/player_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HELLO"
        android:textSize="30sp"
        android:textColor="@color/grey"
        android:background="@color/White"
        android:ems="5"
        android:textIsSelectable="false"/>

</RelativeLayout>
