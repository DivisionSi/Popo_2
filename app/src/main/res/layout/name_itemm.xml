<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:id="@+id/p_name"
        android:textSize="18sp"
        android:textColor="@color/White"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <TextView
        android:text="      0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:id="@+id/goals_scored"
        android:textColor="@color/White"
        android:layout_alignTop="@+id/p_name"
        android:layout_alignParentEnd="true"
        android:textSize="18sp"
        android:textAlignment="center" />

    <TextView
        android:text="     "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/goals_scored"
        android:id="@+id/textView"
        android:textAlignment="center" />

    <CheckBox

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_appearence"
        android:layout_alignBaseline="@+id/goals_scored"
        android:layout_alignBottom="@+id/goals_scored"
        android:layout_toStartOf="@+id/textView" />

</RelativeLayout>