<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <TextView
        android:text="      0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:id="@+id/goals_scored"
        android:textColor="@color/Black"
        android:layout_alignTop="@+id/p_name"
        android:layout_alignParentEnd="true"
        android:textSize="18sp"
        android:textAlignment="center" />

    <TextView
        android:text="     "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/goals_scored"
        android:id="@+id/textView"
        android:textAlignment="center" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:id="@+id/p_name"
        android:textSize="18sp"
        android:textColor="@color/Black"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/player_appearence" />

    <CheckBox

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_appearence"
        android:layout_marginStart="12dp"
        tools:background="@color/Black"
        android:layout_alignBaseline="@+id/p_name"
        android:layout_alignBottom="@+id/p_name"
        android:layout_alignParentStart="true" />

</RelativeLayout>