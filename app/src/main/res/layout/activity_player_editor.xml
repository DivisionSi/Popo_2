<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.gmail.saadbnwhd.popo_2.PlayerEditor"
    android:background="@drawable/playeradder3"
    android:largeHeap="true"
    >
    <TextView
        android:layout_marginTop="6dp"
        android:textSize="15sp"
        android:id="@+id/s_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senoir Player"
        android:textColor="@color/Black"/>
    <CheckBox

        android:layout_toRightOf="@+id/s_player"
        android:id="@+id/checkbox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="13dp"
        android:textSize="15sp"
        android:id="@+id/u16_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="U16 Player"
        android:textColor="@color/Black"
        android:layout_below="@+id/s_player"/>
    <CheckBox

        android:layout_toRightOf="@+id/s_player"
        android:layout_below="@+id/checkbox1"
        android:id="@+id/checkbox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView

        android:layout_marginTop="14dp"
        android:textSize="15sp"
        android:id="@+id/u14_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="U14 Player"
        android:textColor="@color/Black"
        android:layout_below="@+id/u16_player"/>
    <CheckBox
        android:layout_below="@+id/checkbox2"
        android:id="@+id/checkbox3"
        android:layout_toRightOf="@+id/s_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>
    <EditText

    android:id="@+id/txt_name"
    android:padding="3dp"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:hint="Player Name"
    android:ems="10"
    android:textColorHint="#6a6969"
    android:textColor="@color/Black"
    android:background="@drawable/textbackground"
    android:layout_below="@+id/u14_player"
    android:layout_marginTop="10dp"
    android:textAlignment="textStart"
    android:textSize="20sp"
    android:layout_marginBottom="20dp"
    android:inputType="textCapWords" />




    <ImageButton
        android:id="@+id/button11"
        android:background="@color/plgreen"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:backgroundTint="@android:color/transparent"
        android:src="@android:drawable/btn_dropdown"
        android:layout_below="@+id/txt_name"
        android:layout_alignEnd="@+id/txt_name" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/txt_jersey"
        android:hint="Jersey Number"
        android:background="@drawable/textbackground"
        android:textSize="20sp"
        android:textColor="@color/Black"
        android:textColorHint="#6a6969"
        android:padding="3dp"
        android:gravity="center_vertical"
        android:ems="10"
        android:layout_below="@+id/txt_name"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btn_done"
        android:editable="false" />

    <EditText
        android:id="@+id/txt_position"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:hint="Position"
        android:gravity="center_vertical"
        android:background="@drawable/textbackground"
        android:textSize="20sp"
        android:textColor="@color/Black"
        android:textColorHint="#6a6969"
        android:padding="3dp"
        android:ems="10"

        android:layout_below="@+id/txt_jersey"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/dob"

        android:layout_marginTop="20dp"
        android:editable="false" />
    <Button
android:layout_below="@+id/txt_position"
        android:id="@+id/dob"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:inputType="date|none"
        android:background="@drawable/datepicker"
        android:textSize="17sp"
        android:textColor="@color/Black"
        android:textColorHint="@color/Black"
        android:padding="3dp"
        android:ems="10"

        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/btn_done" />

    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:text="DONE"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/btn_done" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/txt_dob"
        android:hint="Date of Birth"
        android:padding="3dp"
        android:background="@drawable/textbackground"
        android:textColor="#000000"
        android:textColorHint="#6a6969"
        android:layout_alignTop="@+id/dob"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/dob"
        android:layout_below="@+id/txt_position"
        android:textSize="20sp"
        android:ems="10"
        android:gravity="center_vertical"
        android:layout_marginRight="9dp"
        />


</RelativeLayout>
