<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.gmail.saadbnwhd.popo_2.PlayerEditor"
    android:background="@color/White"
    >
<EditText

    android:id="@+id/txt_name"
    android:padding="3dp"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:hint="Player Name"
    android:ems="10"
    android:textColorHint="#6a6969"
    android:textColor="@color/Black"
    android:background="@drawable/textbackground"
    android:layout_above="@+id/button11"
    android:layout_alignParentStart="true"
    android:textAlignment="textStart"
    android:textSize="20dp"
    android:layout_marginBottom="20dp"
    android:inputType="textCapWords" />




    <ImageButton
        android:id="@+id/button11"
        android:background="@color/White"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/btn_dropdown"
        android:layout_above="@+id/txt_position"
        android:layout_alignEnd="@+id/txt_position" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/txt_jersey"
        android:hint="Jersey Number"
        android:background="@drawable/textbackground"
        android:textSize="20dp"
        android:textColor="@color/Black"
        android:textColorHint="#6a6969"
        android:padding="3dp"
        android:ems="10"
        android:layout_above="@+id/txt_position"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btn_done"
        android:textAlignment="textStart"
        android:layout_marginTop="10dp"
        android:editable="false" />

    <EditText
        android:id="@+id/txt_position"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:hint="Position"
        android:background="@drawable/textbackground"
        android:textSize="20dp"
        android:textColor="@color/Black"
        android:textColorHint="#6a6969"
        android:padding="3dp"
        android:ems="10"

        android:layout_above="@+id/txt_dob"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/dob"
        android:textAlignment="textStart"
        android:layout_marginTop="20dp"
        android:editable="false" />
    <Button

        android:id="@+id/dob"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:inputType="date|none"
        android:background="@drawable/datepicker"
        android:textSize="17sp"
        android:textColor="@color/Black"
        android:textColorHint="@color/Black"
        android:padding="3dp"
        android:ems="10"

        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/btn_done" />

    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:text="DONE"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/btn_done" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_dob"
        android:hint="Date of Birth"
        android:textColor="#000000"
        android:textColorHint="#6a6969"
        android:textAlignment="textStart"
        android:layout_alignTop="@+id/dob"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/dob"
        android:layout_alignBottom="@+id/dob"
        android:textSize="20dp" />


</RelativeLayout>
